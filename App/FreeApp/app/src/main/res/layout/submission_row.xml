<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white" >

        <ImageView
            android:id="@+id/submissionImageView"
            android:contentDescription="@string/submission_thumbnail"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:adjustViewBounds="true"
            android:src="@drawable/no_image_available" />

        <ImageView
            android:id="@+id/submissionFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="120sp"
            android:maxWidth="300sp"
            android:src="@drawable/submission_frame" />


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="Arial"
            android:gravity="end"
            android:textColor="#7e7e7e"
            android:textSize="20sp"
            android:text="@string/app_name"
            android:layout_marginTop="29dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dollar"
                android:src="@drawable/dollar"
                android:alpha="0.2"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/submissionImageView"
                android:layout_alignBottom="@+id/submissionImageView" />

        </RelativeLayout>
    </TableRow>

</RelativeLayout>