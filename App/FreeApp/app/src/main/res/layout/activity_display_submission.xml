<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ch.epfl.sweng.freeapp.mainScreen.DisplaySubmissionActivity">


    <ImageView
        android:src="@drawable/no_image_available"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:id="@+id/submissionImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp" />

    <ImageButton
        android:id="@+id/like"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_action_good"
        android:layout_alignTop="@+id/submissionImageView"
        android:onClick="likeButtonOnClick"
        android:layout_toRightOf="@+id/submissionImageView"
        android:layout_toEndOf="@+id/submissionImageView" />
    <ImageButton
        android:id="@+id/dislike"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_action_bad"
        android:layout_below="@+id/like"
        android:layout_alignLeft="@+id/like"
        android:onClick="dislikeButtonOnclick"
        android:layout_alignStart="@+id/like"
        android:contentDescription="dislike" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""

        android:id="@+id/numberOfLikes"
        android:layout_above="@+id/dislike"
        android:layout_toRightOf="@+id/like"
        android:layout_toEndOf="@+id/like"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""

        android:id="@+id/numberOfDislikes"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/like"
        android:layout_toRightOf="@+id/dislike"
        android:layout_toEndOf="@+id/dislike" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="Arial"
        android:textSize="30dp"
        android:id="@+id/submissionName"
        android:layout_below="@+id/submissionImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submissionDescription"
        android:layout_below="@+id/submissionName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time remaining: TODO"
        android:id="@+id/timeRemaining"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
