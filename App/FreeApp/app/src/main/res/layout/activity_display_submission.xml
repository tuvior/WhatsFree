<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.epfl.sweng.freeapp.mainScreen.DisplaySubmissionActivity">


    <ImageView
        android:id="@+id/submissionImageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/no_image_available" />

    <ImageButton
        android:id="@+id/like"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/submissionImageView"
        android:layout_toEndOf="@+id/submissionImageView"
        android:layout_toRightOf="@+id/submissionImageView"
        android:onClick="likeButtonOnClick"
        android:scaleType="centerInside"
        android:src="@drawable/ic_action_good" />

    <ImageButton
        android:id="@+id/dislike"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/like"
        android:layout_alignStart="@+id/like"
        android:layout_below="@+id/like"
        android:contentDescription="dislike"
        android:onClick="dislikeButtonOnclick"
        android:scaleType="centerInside"
        android:src="@drawable/ic_action_bad" />

    <TextView
        android:id="@+id/numberOfLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/dislike"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/like"
        android:layout_toRightOf="@+id/like"
        android:text="" />

    <TextView
        android:id="@+id/numberOfDislikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/like"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/dislike"
        android:layout_toRightOf="@+id/dislike"
        android:text="" />

    <TextView
        android:id="@+id/submissionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/submissionImageView"
        android:layout_marginTop="19dp"
        android:fontFamily="Arial"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/submissionDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/submissionName" />

    <TextView
        android:id="@+id/submissionLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Location not provided"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/submissionRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/submissionImageView"
        android:layout_toRightOf="@+id/submissionImageView"
        android:ems="10"
        android:inputType="number" />


</RelativeLayout>
